# ============================================
# AL SÂDIKA BACKEND - CONFIGURATION
# ============================================
# Copiez ce fichier vers .env et ajustez les valeurs

# ============================================
# BASE DE DONNÉES MONGODB
# ============================================
MONGO_ROOT_USER=alsadika_admin
MONGO_ROOT_PASSWORD=CHANGEZ_MOI_ABSOLUMENT_12345
DB_NAME=alsadika_db
MONGO_PORT=27017

# ============================================
# SERVEUR BACKEND
# ============================================
BACKEND_PORT=8001
WORKERS=2
MAX_CONNECTIONS=100

# ============================================
# SÉCURITÉ & AUTHENTIFICATION
# ============================================
# Secret JWT pour les sessions (générez une clé unique)
JWT_SECRET=CHANGEZ_CETTE_CLE_JWT_SECRETE_ALEATOIRE_123456789

# En-tête API pour l'authentification (optionnel)
API_KEY_HEADER=X-AlSadika-Key

# ============================================
# CORS & DOMAINES AUTORISÉS
# ============================================
# Ajoutez vos domaines/IPs (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,https://votre-domaine.com,http://votre-ip:8001
ALLOWED_HOSTS=localhost,votre-domaine.com,votre-ip

# ============================================
# INTÉGRATION LLM (EMERGENT KEY)
# ============================================
# Clé universelle pour OpenAI/Anthropic/Google
# OBLIGATOIRE pour le mode hybride (noyau + LLM)
EMERGENT_LLM_KEY=VOTRE_CLE_EMERGENT_UNIVERSELLE_ICI

# ============================================
# CONFIGURATION KERNEL AL SÂDIKA
# ============================================
KERNEL_MODE=production
KERNEL_LOG_LEVEL=INFO

# ============================================
# PROXY REVERSE (NGINX) - OPTIONNEL
# ============================================
HTTP_PORT=80
HTTPS_PORT=443

# ============================================
# CACHE REDIS - OPTIONNEL
# ============================================
REDIS_PORT=6379

# ============================================
# CONFIGURATION AVANCÉE
# ============================================

# Mode de développement (true/false)
DEBUG_MODE=false

# Limitation de débit (requests per minute)
RATE_LIMIT=100

# Taille max uploads (en MB)
MAX_UPLOAD_SIZE=50

# Rétention des logs (en jours)
LOG_RETENTION_DAYS=30

# ============================================
# VARIABLES SYSTÈME (NE PAS MODIFIER)
# ============================================
COMPOSE_PROJECT_NAME=alsadika
COMPOSE_FILE=docker-compose.yml