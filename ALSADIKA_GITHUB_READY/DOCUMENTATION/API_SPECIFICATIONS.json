{
  "openapi": "3.0.0",
  "info": {
    "title": "Al Sâdika Backend API",
    "description": "API pour le noyau Al Sâdika - Assistante IA souveraine",
    "version": "1.0.0",
    "contact": {
      "name": "Brahim Lamrani",
      "url": "https://alsadika.com"
    },
    "license": {
      "name": "Proprietary"
    }
  },
  "servers": [
    {
      "url": "https://votre-domaine.com/api",
      "description": "Serveur de production"
    },
    {
      "url": "http://localhost:8001/api",
      "description": "Serveur de développement"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Test de santé",
        "description": "Vérification que l'API est accessible",
        "responses": {
          "200": {
            "description": "API fonctionnelle",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello World"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/chat/stream": {
      "get": {
        "summary": "Chat streaming (SSE)",
        "description": "Conversation avec Al Sâdika via Server-Sent Events",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Message utilisateur"
          },
          {
            "name": "sessionId",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "ID de session pour persistance"
          },
          {
            "name": "provider",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["kernel", "hybrid"]
            },
            "description": "Mode: kernel pur ou hybride (kernel + LLM)"
          },
          {
            "name": "model",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Modèle: 'local' pour kernel, 'gpt-4o-mini' pour hybride"
          }
        ],
        "responses": {
          "200": {
            "description": "Stream SSE des réponses",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/chat/history": {
      "get": {
        "summary": "Historique de conversation",
        "parameters": [
          {
            "name": "sessionId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Messages de la session",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "session_id": {
                      "type": "string"
                    },
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "role": {
                            "type": "string",
                            "enum": ["user", "assistant"]
                          },
                          "content": {
                            "type": "string"
                          },
                          "ts": {
                            "type": "string",
                            "format": "date-time"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/kernel/memory": {
      "get": {
        "summary": "Lire mémoire du kernel",
        "responses": {
          "200": {
            "description": "Mémoire approuvée du kernel",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    },
                    "memory": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/kernel/memory/approve": {
      "post": {
        "summary": "Approuver entrée mémoire",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string"
                  },
                  "value": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Mémoire mise à jour"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ChatMessage": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": ["user", "assistant"]
          },
          "content": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}